{
    "timeline": {
        "background": "#000000",
        "tracks": [
            {
                "clips": [
                    {
                        "asset": {
                            "type": "html",
                            "html": "<p>\"{{text}}\"</p>",
                            "css": "p { font-size: 72px; color: #FFFFFF; }",
                            "width": 750,
                            "height": 593
                        },
                        "start": 1,
                        "length": 9,
                        "offset": {
                            "x": 0.167,
                            "y": 0
                        },
                        "transition": {
                            "in": "fadeSlow"
                        },
                        "effect": "zoomOutSlow"
                    }
                ]
            },
            {
                "clips": [
                    {
                        "asset": {
                            "type": "luma",
                            "src": "https://shotstack-assets.s3.amazonaws.com/luma-mattes/circle-400x400.jpg"
                        },
                        "start": 0.5,
                        "length": 9.5,
                        "effect": "zoomIn"
                    },
                    {
                        "asset": {
                            "type": "image",
                            "src": "{{profilePictureUrl}}"
                        },
                        "start": 0.5,
                        "length": 9.5,
                        "offset": {
                            "x": -0.329,
                            "y": 0.045
                        },
                        "fit": "none",
                        "transition": {
                            "in": "fade"
                        },
                        "scale": 0.75
                    }
                ]
            },
            {
                "clips": [
                    {
                        "asset": {
                            "type": "html",
                            "html": "<p>{{name}}</p>",
                            "height": 75,
                            "css": "p { color: #000000; font-size: 46px; text-align: center; }",
                            "width": 360
                        },
                        "start": 0.5,
                        "length": 9.5,
                        "offset": {
                            "x": -0.328,
                            "y": -0.22
                        },
                        "transition": {
                            "in": "fade"
                        }
                    },
                    {
                        "asset": {
                            "type": "html",
                            "html": "<p>@{{username}}</p>",
                            "height": 75,
                            "width": 360,
                            "css": "p { color: #000000; font-size: 24px; text-align: center; }"
                        },
                        "start": 0.5,
                        "length": 9.5,
                        "offset": {
                            "x": -0.328,
                            "y": -0.28
                        },
                        "transition": {
                            "in": "fade"
                        }
                    }
                ]
            },
            {
                "clips": [
                    {
                        "asset": {
                            "type": "html",
                            "html": "<p></p>",
                            "background": "#F5F8FA",
                            "height": 720,
                            "width": 427
                        },
                        "start": 0,
                        "length": 10,
                        "transition": {
                            "in": "carouselRightSlow"
                        },
                        "position": "left",
                        "offset": {
                            "x": 0,
                            "y": 0
                        }
                    }
                ]
            }
        ]
    },
    "output": {
        "format": "mp4",
        "resolution": "hd",
        "fps": 30,
        "destinations": [
            {
                "provider": "shotstack",
                "exclude": true
            }
        ]
    }
}