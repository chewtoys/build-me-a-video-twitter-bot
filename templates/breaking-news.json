{
    "timeline": {
        "soundtrack": {
            "src": "https://shotstack-assets.s3.ap-southeast-2.amazonaws.com/music/breaking-news-mid.mp3",
            "volume": 1
        },
        "fonts": [
            {
                "src": "https://templates.shotstack.io/basic/asset/font/NotoSansArabic-Regular.ttf"
            },
            {
                "src": "https://templates.shotstack.io/basic/asset/font/notosans-regular.ttf"
            }
        ],
        "background": "#000000",
        "tracks": [
            {
                "clips": [
                    {
                        "asset": {
                            "type": "html",
                            "html": "<p>@MakeMeAVideo</p>",
                            "height": 50,
                            "width": 150,
                            "css": "p { font-size: 14px; color: #FFFFFF; font-family: \"Noto Sans\",\"Noto Sans Arabic\"; font-style: italic; font-weight: 600; }"
                        },
                        "offset": {
                            "x": 0.439,
                            "y": -0.464
                        },
                        "transition": {
                            "in": "fade",
                            "out": "fade"
                        },
                        "effect": "zoomOutSlow",
                        "start": 5.9,
                        "length": 9.2
                    }
                ]
            },
            {
                "clips": [
                    {
                        "asset": {
                            "type": "html",
                            "html": "<p>{{text}}</p>",
                            "css": "p { font-size: {{fontSize}}; color: #000000; font-family: \"Noto Sans\",\"Noto Sans Arabic\"; line-height: 120%; }",
                            "width": 900,
                            "height": 250
                        },
                        "offset": {
                            "x": 0.002,
                            "y": -0.127
                        },
                        "transition": {
                            "in": "fade",
                            "out": "fade"
                        },
                        "effect": "zoomOutSlow",
                        "start": 5.9,
                        "length": 9.2,
                        "position": "center",
                        "fit": "none"
                    }
                ]
            },
            {
                "clips": [
                    {
                        "asset": {
                            "type": "luma",
                            "src": "https://shotstack-assets.s3.amazonaws.com/luma-mattes/circle-400x400.jpg"
                        },
                        "effect": "zoomIn",
                        "start": 5.8,
                        "length": 9.2
                    },
                    {
                        "asset": {
                            "type": "image",
                            "src": "{{profilePictureUrl}}"
                        },
                        "offset": {
                            "x": 0.349,
                            "y": 0.217
                        },
                        "fit": "none",
                        "transition": {
                            "in": "fade",
                            "out": "fade"
                        },
                        "start": 5.8,
                        "length": 9.2,
                        "scale": 0.5
                    }
                ]
            },
            {
                "clips": [
                    {
                        "asset": {
                            "type": "html",
                            "html": "<p class='name'>{{name}}</p><p class='username'>@{{username}}</p>",
                            "height": 100,
                            "width": 750,
                            "css": "p { color: #000000; text-align: right; font-family: \"Noto Sans\",\"Noto Sans Arabic\"; line-height: 80%; } .name { font-size: 40px; } .username { font-size: 24px; }"
                        },
                        "offset": {
                            "x": -0.039,
                            "y": 0.153
                        },
                        "transition": {
                            "in": "fade",
                            "out": "fade"
                        },
                        "start": 5.8,
                        "length": 9.2
                    }
                ]
            },
            {
                "clips": [
                    {
                        "asset": {
                            "type": "video",
                            "src": "https://shotstack-assets.s3.ap-southeast-2.amazonaws.com/footage/breaking-news.mp4",
                            "volume": 0
                        },
                        "start": 0,
                        "length": 15,
                        "transition": {
                            "out": "fade"
                        },
                        "offset": {
                            "x": 0,
                            "y": 0
                        }
                    }
                ]
            }
        ]
    },
    "output": {
        "format": "mp4",
        "resolution": "hd",
        "fps": 30,
        "destinations": [
            {
                "provider": "shotstack",
                "exclude": true
            }
        ]
    }
}